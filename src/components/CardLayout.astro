---
import Card from './Card.astro';

import shepherdsImg from '../assets/images/shepherds.png'
import mangoImg from '../assets/images/mango representative image.png'
import boosThereImg from '../assets/images/boostitle4.png'
import dreamlandImg from '../assets/images/dreamland_main.png'
import deseoImg from '../assets/images/deseo2.png'
import valImg from '../assets/images/valiant.png'

const cardsData = [
  {
    title: "Shepherds - Gameplay/UI Programmer",
    teamSize: "Team: ~20",
    timeline: "Timeline: 1 Year (May 2023 - June 2024)",
    href: "/kaya-astro-portfolio//shepherds",
    img: shepherdsImg.src,
    badges: ["C#", "Unity", "3D", "Puzzle-Adventure"]
  },
  {
    title: "Mango Goes to Mewsic School - Developer",
    teamSize: "Team: 2",
    timeline: "Timeline: 4 Months (Jan 2023 - May 2023)",
    href: "/kaya-astro-portfolio//mango",
    img: mangoImg.src,
    badges: ["C#", "Unity", "2D", "Rhythm-RPG"]
  },
  {
    title: "Deseo y Dise√±o - Lead Programmer",
    teamSize: "Team: 3",
    timeline: "Timeline: 1 Month (March 2024)",
    href: "/kaya-astro-portfolio//deseo",
    img: deseoImg.src,
    badges: ["C#", "Unity", "2.5D", "Narrative"]
  },
  {
    title: "dreamland. - Gameplay Programmer",
    teamSize: "Team: 4",
    timeline: "Timeline: 48 Hours (April 2024)",
    href: "/kaya-astro-portfolio/dreamland",
    img: dreamlandImg.src,
    badges: ["Lua", "Roblox Studio", "3D", "Multiplayer"]
  },
  {
    title: "Boo's There? - Programming Lead",
    teamSize: "Team: ~35",
    timeline: "Timeline: 4 Months (Aug 2023 - Dec 2023)",
    href: "/kaya-astro-portfolio//boos",
    img: boosThereImg.src,
    badges: ["C#", "Unity", "2D", "Simulator"]
  },
  {
    title: "(val)iant - Programmer",
    teamSize: "Team: ~20",
    timeline: "Timeline: 5 Months (December 2022 - May 2023)",
    href: "/kaya-astro-portfolio//valiant",
    img: valImg.src,
    badges: ["C#", "Unity", "2D", "Narrative"]
  }


];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Card Layout</title>
</head>
<body class="flex justify-center items-center h-screen">
  <div class="mx-auto w-11/12 lg:w-10/12 xl:w-8/12 min-[1550px]:w-3/4">
    <div class="grid grid-cols-1 min-[900px]:grid-cols-2 min-[1550px]:grid-cols-3 gap-8">
      {cardsData.map((card, index) => (
        <Card
          title={card.title}
          teamSize={card.teamSize}
          timeline={card.timeline}
          href={card.href}
          img={card.img}
          badges={card.badges}
        />
      ))}
    </div>
  </div>
</body>
</html>
