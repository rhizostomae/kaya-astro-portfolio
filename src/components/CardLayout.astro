---
import Card from './Card.astro';

import shepherdsImg from '../assets/images/menu_background.png'
import mangoImg from '../assets/images/mango representative image.png'
import boosThereImg from '../assets/images/menu_background.png'
import dreamlandImg from '../assets/images/dreamland_main.png'
import deseoImg from '../assets/images/deseo2.png'
import valImg from '../assets/images/valiant.png'

const cardsData = [
  {
    title: "Shepherds - Gameplay/UI Programmer",
    teamSize: "Team Size: ~20",
    timeline: "Timeline: May 2023 - 2024 (1 Year)",
    href: "https://example.com",
    img: shepherdsImg.src,
    badges: ["C#", "Unity", "3D", "Puzzle-Adventure"]
  },
  {
    title: "Mango Goes to Mewsic School - Developer",
    teamSize: "Team Size: 2",
    timeline: "Timeline: Jan 2023 - May 2023 (4 Months)",
    href: "https://example.com",
    img: mangoImg.src,
    badges: ["C#", "Unity", "2D", "Rhythm-RPG"]
  },
  {
    title: "Deseo y Dise√±o - Lead Programmer",
    teamSize: "Team Size: 3",
    timeline: "Timeline - March 2024 (1 Month)",
    href: "https://example.com",
    img: deseoImg.src,
    badges: ["C#", "Unity", "2.5D", "Narrative"]
  },
  {
    title: "dreamland. - Gameplay Programmer",
    teamSize: "Team Size: 4",
    timeline: "Timeline - April 2024 (48 Hours)",
    href: "https://example.com",
    img: dreamlandImg.src,
    badges: ["Lua", "Roblox Studio", "3D", "Minigame"]
  },
  {
    title: "Boo's There? - Programming Lead",
    teamSize: "Team Size: ~35",
    timeline: "Timeline: Aug 2023 - Dec 2023 (4 Months)",
    href: "https://example.com",
    img: boosThereImg.src,
    badges: ["C#", "Unity", "2D", "Simulator"]
  },
  {
    title: "(val)iant - Programmer",
    teamSize: "Team Size: ~20",
    timeline: "Timeline - December 2022 - May 2023 (5 Months)",
    href: "https://example.com",
