---
import Badge from '../components/Badge.astro'

interface Props {
	title: string;
	teamSize: string;
	timeline: string;
	href: string;
	img: string;
	badges: string[];
}

const { href, title, teamSize, timeline, img, badges } = Astro.props;

import gifSrc from '../assets/gifs/kpop-hitnotes.gif'
const gifString = gifSrc.src;
---

<html>
	<head>
		<link
    	rel="stylesheet"
   		 href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  		/>
	</head>
<body>
<a class="text-sm sm:text-lg flex mx-auto flex-col min-w-84 max-w-[28rem] bg-white shadow-sm rounded-xl hover:shadow-lg transition animate__animated animate__fadeIn" href={href}>
	<div class="h-48 sm:h-64 rounded-t-xl overflow-hidden">
        <img class="w-full h-full object-cover" src={img} 
            alt={`${title} image`}
        >
    </div>
	<div class="p-4 md:p-5">
	  <h3 class="text-md sm:text-lg font-semibold text-gray-800">
		{title}
	  </h3>
	  <p class="mt-1 text-gray-500">
		{teamSize}
	  </p>
	  <p class="mt-1 text-gray-500">
		{timeline}
	  </p>
	  <div class="mt-2">
		<div class="flex flex-wrap">
		{badges.map((badge, index) => (
			<Badge key={index} text={badge} />
		))}
		</div>
	</div>
	</div>
</a>
</body>
</html>