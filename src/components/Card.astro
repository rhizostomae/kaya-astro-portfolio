---
interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}

const { href, title, body, img } = Astro.props;
---
<style>
	.custom-font {
		font-family: 'Omnes', sans-serif;
	}
	@font-face {
	font-family: 'Omnes';
	src: url('../../public/fonts/Omnes\ Regular.ttf') format('ttf');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
	} 
</style>
<a class="flex flex-col bg-white shadow-sm rounded-xl hover:shadow-lg transition dark:bg-slate-900 dark:shadow-slate-700/[.7]" href={href}>
	<img class="w-full h-64 rounded-t-xl" src={img} alt="Image Description">
	<div class="p-4 md:p-5">
	  <h3 class="text-lg font-bold text-gray-800 dark:text-white">
		{title}
	  </h3>
	  <p class="custom-font mt-1 text-gray-500 dark:text-gray-400">
		{body}
	  </p>
	</div>
</a>