---
import Badge from '../components/Badge.astro'

interface Props {
	title: string;
	teamSize: string;
	timeline: string;
	href: string;
	img: string;
	badges: string[];
}

const { href, title, teamSize, timeline, img, badges } = Astro.props;

import gifSrc from '../assets/gifs/kpop-hitnotes.gif'
const gifString = gifSrc.src;
---

<a class="flex flex-col bg-white shadow-sm rounded-xl hover:shadow-lg transition " href={href}>
	<div class="h-64 rounded-t-xl overflow-hidden">
        <img class="w-full h-full object-cover" src={img} 
            alt={`${title} image`}
            data-original-src={img} 
            onmouseover={`this.src='${img}'`}
            onmouseout={`this.src='${img}'`}
        >
    </div>
	<div class="p-4 md:p-5">
	  <h3 class="text-lg font-semibold text-gray-800">
		{title}
	  </h3>
	  <p class="mt-1 text-gray-500">
		{teamSize}
	  </p>
	  <p class="mt-1 text-gray-500">
		{timeline}
	  </p>
	  <div class="mt-2">
		<div class="flex flex-wrap">
		{badges.map((badge, index) => (
			<Badge key={index} text={badge} />
		))}
		</div>
	</div>
	</div>
</a>