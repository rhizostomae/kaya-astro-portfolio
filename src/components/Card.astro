---
import Badge from '../components/Badge.astro'

interface Props {
	title: string;
	teamSize: string;
	timeline: string;
	href: string;
	img: string;
	badges: string[];
}

const { href, title, teamSize, timeline, img, badges } = Astro.props;

console.log(badges[0])
---
<a class="flex flex-col bg-white shadow-sm rounded-xl hover:shadow-lg transition" href={href}>
	<img class="w-full h-64 rounded-t-xl" src={img} alt="Image Description">
	<div class="p-4 md:p-5">
	  <h3 class="text-lg font-bold text-gray-800">
		{title}
	  </h3>
	  <p class="mt-1 text-gray-500">
		{teamSize}
	  </p>
	  <p class="mt-1 text-gray-500">
		{timeline}
	  </p>
	  <div class="mt-2">
		{badges.map((badge, index) => (
			<Badge key={index} text={badge} />
		))}
	</div>
	</div>
</a>