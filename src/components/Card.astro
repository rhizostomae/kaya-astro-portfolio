---
import Badge from '../components/Badge.astro'
import Image from 'astro/components/Image.astro'
import '../styles/animasta.css';

interface Props {
	title: string;
	teamSize: string;
	timeline: string;
	href: string;
	img: string;
	altImg: string;
	badges: string[];
}

const { href, title, teamSize, timeline, img, altImg, badges } = Astro.props;

---

<html>
	<head>
		<link
    	rel="stylesheet"
   		href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  		/>
	</head>
<body>
<a class="group flip-in-hor-bottom text-sm sm:text-lg flex mx-auto flex-col min-w-84 max-w-[28rem] bg-white shadow-sm rounded-xl hover:shadow-xl" href={href}>
	<div class="h-48 sm:h-64 rounded-t-xl overflow-hidden">   
		<img class="hidden group-hover:block w-full h-full object-cover" src={altImg} 
            alt={`${title} altImg`}
        >
		<img class="group-hover:hidden w-full h-full object-cover" src={img} 
            alt={`${title} image`}
        >
    </div>
	<div class="p-4 md:p-5">
	  <h3 class="text-md sm:text-lg font-semibold text-gray-800">
		{title}
	  </h3>
	  <p class="mt-1 text-gray-500">
		{teamSize}
	  </p>
	  <p class="mt-1 text-gray-500">
		{timeline}
	  </p>
	  <div class="mt-2">
		<div class="flex flex-wrap">
		{badges.map((badge, index) => (
			<Badge key={index} text={badge} />
		))}
		</div>
	</div>
	</div>
</a>
</body>
</html>